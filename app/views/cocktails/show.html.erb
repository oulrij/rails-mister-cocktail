<h1><%= @cocktail.name %></h1>
<h2>List of Ingredients</h2>
<ul>
  <% @doses.each do |dose| %>
    <li><span><%= dose.ingredient.name %>:</span><span><%= dose.description %></span><%= link_to 'Remove', dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure you want to delete that ingredient?" } %></li>
  <% end %>
</ul>
<p><%= link_to 'Add doses', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
